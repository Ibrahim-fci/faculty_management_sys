                              </div>
                              <input type="text" class="form-control" placeholder="Answer 4" aria-label="Username" aria-describedby="basic-addon1"  id="op4">
                            </div>
                            <!-- ------------------- -->
                            <div class="input-group mb-3 col">
                              <select class="custom-select ans" >
                                <option selected>Choose... Right Answer</option>
                                <option value="1">a</option>
                                <option value="2">b</option>
                                <option value="3">c</option>
                                <option value="4">d</option>
                              </select>
                            </div>
                        
                        </div>
                    </form>
                  </div> 
            </div>
          </div>
          
                  <div id="questionss"></div>
                
                
