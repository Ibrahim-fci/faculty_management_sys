              <h3>Create Quiz</h3>
              <div class="line"></div>

             <div id="intialQuuestion">
                <form action="">
                  <div class="form-group mt-5">
                      <!-- --------------Name of Quiz--------------------- -->

                    <div  id="intialQuiz">
                      <div class="row">
                      
                        <div class="input-group mb-3 col-md-6">
                          <input type="text" class="form-control" placeholder="Name of Quiz " id="quizName" >
                        </div>

                        <!-- --------------Choose...Levels--------------------- -->

                        <div class="input-group mb-3 col-md-6 mb-3">
                          <select class="custom-select" id="quizLevel">
                            <option selected>Choose...Levels</option>
                            <option value="1">First Grade</option>
                            <option value="2">Second Grade</option>
                            <option value="3cs">Third Grade (CS)</option>
                            <option value="3is">Third Grade (IS)</option>
                            <option value="4cs">Fourth Grade (CS)</option>
                          <option value="4is">Fourth Grade (IS)</option>
                          </select>
                        </div>
                      </div>

                        
                          <!-- ---------------Enter A question-------------- -->
                          <div class="input-group mb-3 ">
                              <div class="input-group-prepend">
                                <span class="input-group-text " id="basic-addon1">Q <sub>1</sub></span>
                              </div>
                              <input type="text" class="form-control" placeholder="Enter A question " aria-label="Username" aria-describedby="basic-addon1" id="firstQuiz">
                            </div>
                      </div>
                      <!-- ----------------Answer-------------------- -->
                        <div class="row justify-content-around">
                            
                          <div class="input-group mb-3 col-md-6">
