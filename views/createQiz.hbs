                                <span class="input-group-text" id="basic-addon1">b</span>
                              </div>
                              <input type="text" class="form-control" placeholder="Answer 2" aria-label="Username" aria-describedby="basic-addon1"  id="op2">
                            </div>
                            <!-- ------------------- -->

                          <div class="input-group mb-3 col-md-6">
                              <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1">c</span>
                              </div>
                              <input type="text" class="form-control" placeholder="Answer 3" aria-label="Username" aria-describedby="basic-addon1"  id="op3">
                            </div>
                            <!-- ------------------- -->

                          <div class="input-group mb-3 col-md-6">
                              <div class="input-group-prepend">
